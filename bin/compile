#!/usr/bin/env bash

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

if [ -f "$ENV_DIR/CHROMIUM_REVISION" ]; then
    CHROMIUM_REVISION=$(cat $ENV_DIR/CHROMIUM_REVISION)
else
    CHROMIUM_REVISION=911577
fi

indent() {
  sed -u 's/^/       /'
}

echo "-----> Updating apt caches"
apt-get update | indent

echo "-----> Installing apt dependencies"
apt-get install -y gconf-service libasound2 libatk1.0-0 libatk-bridge2.0-0 libc6 libcairo2 libcups2 libdbus-1-3 libexpat1 libfontconfig1 libgcc1 libgconf-2-4 libgdk-pixbuf2.0-0 libglib2.0-0 libgtk-3-0 libnspr4 libpango-1.0-0 libpangocairo-1.0-0 libstdc++6 libx11-6 libx11-xcb1 libxcb1 libxcomposite1 libxcursor1 libxdamage1 libxext6 libxfixes3 libxi6 libxrandr2 libxrender1 libxss1 libxtst6 ca-certificates fonts-liberation libappindicator1 libnss3 lsb-release xdg-utils wget libcairo-gobject2 libxinerama1 libgtk2.0-0 libpangoft2-1.0-0 libthai0 libpixman-1-0 libxcb-render0 libharfbuzz0b libdatrie1 libgraphite2-3 libgbm1 | indent

echo "-----> Downloading chromium (revision $CHROMIUM_REVISION)"
curl "https://storage.googleapis.com/chromium-browser-snapshots/Linux_x64/$CHROMIUM_REVISION/chrome-linux.zip" --output "$BUILD_DIR/chrome-linux.zip" | indent

echo "-----> Extracting chromium zip"
unzip "$BUILD_DIR/chrome-linux.zip" | indent
rm "$BUILD_DIR/chrome-linux.zip" | indent

echo "-----> Installing chromium executable on PATH"
ln -s "$BUILD_DIR/chrome-linux/chrome" /usr/bin/chromium | indent
